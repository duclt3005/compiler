Program Example2; (* Factorial *)

CONst  d = 123.4 ;
        d= -d;

Var n : FLOAT;

Function F(FLoat n : Integer) : Integer;
  Begin
    If n = 0 Then F := 1 Else F := N * F (N - 1);
  end;

Begin
  For n := 1 To 7 Do 
    Begin
      Call WriteLn; 
      Call WriteI( F(n));
    End;
End. (* Factorial *)